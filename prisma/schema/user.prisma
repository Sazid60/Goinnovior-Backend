
model AuthProvider {
    id         String @id @default(uuid())
    provider   String
    providerId String
    userId     String
    user       User   @relation(fields: [userId], references: [id])
}

model User {
    id          String         @id @default(uuid())
    name        String
    email       String         @unique
    password    String?
    role        Role           @default(USER)
    phone       String?
    picture     String?
    isBlocked   IsBlocked      @default(UNBLOCKED)
    isVerified  Boolean        @default(true)
    auths       AuthProvider[]
    createdAt   DateTime       @default(now())
    updatedAt   DateTime       @updatedAt
    @@map("users")
}








